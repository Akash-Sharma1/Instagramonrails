<h1>Listing Post</h1>


<%= link_to 'New post', new_post_path %>

<table>
    <tr>
        <th>caption</th>
        <th>show</th>
        <th>edit</th>
        <th>delete</th>
    </tr>

    <% @post.each do |post| %>
    <tr>
        <td><%= post.caption %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>